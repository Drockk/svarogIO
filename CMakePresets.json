                "outputOnFailure": true
            }
        },
        {
            "name": "ci-gcc-release",
            "configurePreset": "ci-gcc-release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "ci-clang-debug",
            "configurePreset": "ci-clang-debug",
            "output": {
